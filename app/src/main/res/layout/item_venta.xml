<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="6dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:padding="8dp"
    android:id="@+id/venta">

    <TextView
        android:id="@+id/tvFechaVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de Venta: " />

    <LinearLayout
        android:background="@drawable/res_rectangulo_bordeado_inicio_2"
        android:backgroundTint="@color/fon_mascotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvFechaVenta">

        <TextView
            android:id="@+id/tvMetodoPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MÃ©todo de pago"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/tvCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo: "
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtotal"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>