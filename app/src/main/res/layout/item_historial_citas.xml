<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/mascota_luna"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvHistorialFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Fecha: " />

    <LinearLayout
        android:id="@+id/card_historial"
        android:background="@drawable/res_rectangulo_bordeado_inicio_2"
        android:backgroundTint="@color/fon_mascotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvHistorialFecha"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHistorialServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHistorialMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mascota: " />

        <TextView
            android:id="@+id/tvHistorialHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario: " />


        <TextView
            android:id="@+id/tvHistorialEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: " />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
