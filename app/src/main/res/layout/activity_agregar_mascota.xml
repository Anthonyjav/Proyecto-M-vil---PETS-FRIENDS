<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.AddFragment">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/res_rectangulo"
        android:padding="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@id/add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:elevation="6dp">

        <ImageButton
            android:id="@+id/btnAtrasMascotaForm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_flecha_izquierda"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Pets"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/mascotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir nueva mascota"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp">

                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/res_rectangulo_bordeado_inicio_2"
                    android:backgroundTint="@color/fon_mascotas"
                    android:hint="Nombre de la mascota"
                    android:elevation="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/etEspecie"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/res_rectangulo_bordeado_inicio_2"
                        android:backgroundTint="@color/fon_mascotas"
                        android:hint="Animal"
                        android:lines="1"
                        android:ellipsize="end"
                        android:elevation="5dp"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="5dp"/>
                    <EditText
                        android:id="@+id/etRaza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/res_rectangulo_bordeado_inicio_2"
                        android:backgroundTint="@color/fon_mascotas"
                        android:hint="Raza"
                        android:lines="1"
                        android:ellipsize="end"
                        android:elevation="5dp"
                        android:textStyle="bold"
                        android:inputType="text"
                        android:padding="15dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/etGenero"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/res_rectangulo_bordeado_inicio_2"
                        android:backgroundTint="@color/fon_mascotas"
                        android:hint="Género"
                        android:lines="1"
                        android:ellipsize="end"
                        android:elevation="5dp"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="5dp"/>
                    <EditText
                        android:id="@+id/etPeso"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/res_rectangulo_bordeado_inicio_2"
                        android:backgroundTint="@color/fon_mascotas"
                        android:hint="Peso"
                        android:inputType="text"
                        android:lines="1"
                        android:ellipsize="end"
                        android:elevation="5dp"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="15dp"/>
                    <EditText
                        android:id="@+id/etAltura"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/res_rectangulo_bordeado_inicio_2"
                        android:backgroundTint="@color/fon_mascotas"
                        android:hint="Altura"
                        android:lines="1"
                        android:ellipsize="end"
                        android:elevation="5dp"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/etEdad"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/res_rectangulo_bordeado_inicio_2"
                        android:backgroundTint="@color/fon_mascotas"
                        android:hint="Edad"
                        android:elevation="5dp"
                        android:inputType="text"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="5dp"/>
                    <EditText
                        android:id="@+id/etColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/res_rectangulo_bordeado_inicio_2"
                        android:backgroundTint="@color/fon_mascotas"
                        android:hint="Color"
                        android:lines="1"
                        android:ellipsize="end"
                        android:elevation="5dp"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="5dp"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/etFechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/res_rectangulo_bordeado_inicio_2"
                    android:backgroundTint="@color/fon_mascotas"
                    android:hint="Fecha de Nacimiento"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:textSize="12sp"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="date"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
                <EditText
                    android:id="@+id/etObservaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/res_rectangulo_bordeado_inicio_2"
                    android:backgroundTint="@color/fon_mascotas"
                    android:hint="Observaciones"
                    android:elevation="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:padding="15dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

                <!-- Botón para seleccionar la imagen -->
                <EditText
                    android:id="@+id/etFotom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/res_rectangulo_bordeado_inicio_2"
                    android:backgroundTint="@color/fon_mascotas"
                    android:hint="Foto (opcional)"
                    android:elevation="5dp"
                    android:inputType="text"
                    android:enabled="false"
                    android:padding="15dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

                <Button
                    android:id="@+id/btnSeleccionarFoto"
                    android:layout_width="250dp"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar Imagen"
                    android:backgroundTint="@color/primario_600"/>

                <!-- ImageView para mostrar la imagen seleccionada -->


                <ImageView
                    android:id="@+id/ivFoto"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_camara" />

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/primario_600"
                    android:padding="10dp"
                    android:text="Guardar Mascota"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>